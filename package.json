{
  "name": "@anyvision/anv-ui-components",
  "version": "0.1.1-beta.10",
  "main": "dist/index.js",
  "private": false,
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AnyVisionltd/anv-ui-components"
  },
  "dependencies": {
    "@anyvision/style-guide": "1.0.1-beta.12",
    "classnames": "^2.2.6",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "react-scripts": "3.4.1",
    "react-transition-group": "^4.3.0",
    "react-window": "^1.8.5",
    "react-window-infinite-loader": "^1.0.5"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --no-copy-ignored --ignore src/**/*.test.js,src/**/*.stories.js,src/setupTests.js",
    "test": "react-scripts test",
    "lint": "eslint -c .eslintrc.js src",
    "lint:fix": "eslint -c .eslintrc.js src --fix",
    "test:staged": "cross-env CI=true react-scripts test --bail --env=jsdom --findRelatedTests",
    "test-jenkins": "CI=true npm test",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "prepublishOnly": "npm run build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@svgr/webpack": "^5.3.1",
    "@testing-library/dom": "^7.2.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.1",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1",
    "url-loader": "^4.1.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/jest/__mocks__/style.js",
      "\\.(gif|ttf|eot)$": "<rootDir>/jest/__mocks__/file.js",
      "\\.(svg)$": "<rootDir>/jest/__mocks__/svg.js"
    }
  }
}
